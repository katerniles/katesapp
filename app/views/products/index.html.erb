
<div class="container product">

<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>
      <table>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Image url</th>
            <th>Colour</th>
            <th>Price</th>
          </tr>
          <% @products .each do |product| %>
           <tr>
           <td><style="width: 10em; padding-right: 1em"> <%= product.name %></td>
           <td><style="width: 20em; padding-right: 1em"><%= product.description %></td>
           <td><style="width: 20em; padding-right: 1em"><%= product.image_url %></td>
           <td><style="width: 5em; padding-right: 1em"><%= product.colour %></td>
           <td> <style="width: 5em; padding-right: 1em"><%= product.price %></td>
           <td><style="width: 5em; padding-right: 1em"><%= link_to 'Show', product %></td>
           <td> <style="width: 5em; padding-right: 1em"><%= link_to 'Edit', edit_product_path(product) %></td>
           <td>  <style="width: 5em"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>           
          <% end %>

      </table>

      <br>

      <%= link_to 'New Product', new_product_path %>
      </div>
    </div>
  </div>

